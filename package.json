{
  "name": "@jordanhuffman/airtable-mcp-server",
  "version": "1.0.0",
  "description": "Enhanced Airtable MCP Server with support for all field types including single select, dates, formulas, and more",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "airtable-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "mcp",
    "airtable",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "author": "Jordan Huffman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordan-huffman/airtable-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/jordan-huffman/airtable-mcp-server/issues"
  },
  "homepage": "https://github.com/jordan-huffman/airtable-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "airtable": "^0.12.2",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
